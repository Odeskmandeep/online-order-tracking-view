<?xml version="1.0" encoding="utf-8"?>
<!-- res/drawable/custom_vertical_progress_bar_progress.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/progress">
        <clip>
            <shape android:shape="rectangle">
                <solid android:color="@android:color/holo_blue_light" /> <!-- Default progress color -->
            </shape>
        </clip>
    </item>
    <!-- res/drawable/custom_vertical_progress_bar_track.xml -->
    <layer-list xmlns:android="http://schemas.android.com/apk/res/android">
        <item android:id="@android:id/background">
            <shape android:shape="rectangle">
                <solid android:color="@android:color/darker_gray" /> <!-- Default background color -->
            </shape>
        </item>
    </layer-list>
</layer-list>